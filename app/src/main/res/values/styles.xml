<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@color/custom_theme_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTheme" parent="android:Theme.Material.Light">
        <item name="android:windowBackground">@color/custom_theme_color</item>
        <item name="android:colorBackground">@color/custom_theme_color</item>
    </style>
    <style name="preferenceTheme">
        <item name="android:background">#4D4D4D</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="AppTehem2" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">#4D4D4D</item>
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:popupTheme">@style/popuptheme</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="popuptheme">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
